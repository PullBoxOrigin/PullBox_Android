<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="registrationViewModel"
            type="com.antique_boss.registration.RegistrationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/registration_toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/registration_toolbar_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="포트폴리오 작성"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/category_select_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@{registrationViewModel.selectedCategory}"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/registration_toolbar" />

        <View
            android:id="@+id/category_select_view_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E9E9E9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_select_view" />

        <EditText
            android:id="@+id/portfolio_url_input_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/pretendard_regular"
            android:hint="포트폴리오 링크 주소를 입력해주세요"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_select_view_divider" />

        <View
            android:id="@+id/portfolio_url_input_view_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#e9e9e9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/portfolio_url_input_view" />

        <EditText
            android:id="@+id/title_input_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_gray_fill_round_corner"
            android:fontFamily="@font/pretendard_regular"
            android:hint="제목을 입력해주세요"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/portfolio_url_input_view_divider" />

        <EditText
            android:id="@+id/main_input_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_gray_fill_round_corner"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:hint="궁금하신 내용이나 피드백 받고 싶은 부분을 중심으로 입력해주세요"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_input_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>